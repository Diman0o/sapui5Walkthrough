<mvc:View
    controllerName="sap.ui.demo.walkthrough.controller.InvoiceList"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <List
      headerText="{i18n>invoiceListTitle}"
      class="sapUiResponsiveMargin"
      width="auto"
      items="{invoice>/Invoices}" >
         <ObjectListItem
            title="{invoice>/Quality} {invoice>Quantity} x {invoice>ProductName}  {invoice>ExtendedPrice}" 
            icon="{path: 'invoice>Icon'}"
            number="{
                path: 'invoice>ExtendedPrice',
                type: 'sap.ui.model.type.Currency',
                formatOptions: {
                    showMeasure: true
                }
            }"
            intro= "{path: 'invoice>ShippedDate',
                type: 'sap.ui.model.type.Date',
                formatOptions: {
                    source: {
                        pattern: 'yyyy-MM-ddT00:00:00'
                    }
                }
            } 
            {{=(${invoice>ExtendedPrice/0} * ${invoice>Quantity})toFixed(2)} {invoice>ExtendedPrice/1}}"
            numberState="{= ${invoice>ExtendedPrice/0} > 50 ? 'Error' : 'Success' }"
            />
            <!-- numberUnit="{view>/currency}" -->


   </List>
</mvc:View>