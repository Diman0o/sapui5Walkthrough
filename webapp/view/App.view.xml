<mvc:View
   controllerName="sap.ui.demo.walkthrough.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <Button
      text="{i18n>showHelloButtonText}"
      press=".onShowHello"/>
   <Input
      value="{/recipient/name}"
      description="{i18n>helloInputText} {/recipient/name}"
      valueLiveUpdate="true"
      width="60%"/>
      <Input
      value="{/recipient/surname}"
      description="{i18n>helloInputText} {/recipient/surname}"
      valueLiveUpdate="true"
      width="60%"/>
</mvc:View>