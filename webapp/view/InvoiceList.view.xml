<mvc:View
    controllerName="sap.ui.demo.walkthrough.controller.InvoiceList"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <List
      headerText="{i18n>invoiceListTitle}"
      id="invoiceList"
      class="sapUiResponsiveMargin"
      width="auto"
      items="{path: 'invoice>/Invoices', filters: [{path: 'Status', operator: 'EQ', value1: 'A'}]}" >
      <headerToolbar>
        <Toolbar>
           <Title text="{i18n>invoiceListTitle}"/>
           <ToolbarSpacer/>
           <SearchField width="50%" search=".onFilterInvoices"/>
        </Toolbar>
     </headerToolbar>
         <ObjectListItem
            title="{invoice>/Quality} {invoice>Quantity} x {invoice>ProductName}  {invoice>ExtendedPrice}" 
            icon="{path: 'invoice>Icon'}"
            number="{
                path: 'invoice>ExtendedPrice',
                type: 'sap.ui.model.type.Currency',
                formatOptions: {
                    showMeasure: true
                }
            }"
            intro= "{parts: [{path: 'invoice>ExtendedPrice/0'}, {path: 'invoice>Quantity'},{path:'invoice>ExtendedPrice/1'}], formatter: '.formatter.fullPrice'}"
            numberState="{= ${invoice>ExtendedPrice/0} > 50 ? 'Error' : 'Success' }">
            <firstStatus>
                <ObjectStatus text="{
                    path: 'invoice>Status',
                    formatter: '.formatter.statusText'
                }"/>
            </firstStatus>
        </ObjectListItem>
            <!-- numberUnit="{view>/currency}" -->


   </List>
</mvc:View>